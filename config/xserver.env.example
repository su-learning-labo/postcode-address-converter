# エックスサーバー設定ファイル
# このファイルは本番環境の設定を含むため、.gitignoreに追加してください

# エックスサーバーの接続情報
XSERVER_HOST="your-domain.xserver.jp"
XSERVER_USER="your-username"
XSERVER_PATH="/home/your-username/your-domain.com/public_html"
XSERVER_DOMAIN="your-domain.com"

# SSH設定
SSH_PORT="22"
SSH_KEY_PATH="~/.ssh/id_rsa"

# デプロイ設定
BACKUP_ENABLED="true"
HEALTH_CHECK_ENABLED="true"
HEALTH_CHECK_URL="https://your-domain.com"

# ファイル除外設定
EXCLUDE_PATTERNS=(
    ".git"
    "node_modules"
    "tests"
    ".github"
    "*.md"
    ".eslintrc.json"
    ".prettierrc"
    "vitest.config.js"
    "package.json"
    "package-lock.json"
    "scripts"
    "coverage"
    "dist"
)

# ファイル権限設定
FILE_PERMISSIONS="755"
DIRECTORY_PERMISSIONS="755"
