{
  "name": "postcode-address-converter",
  "version": "1.0.0",
  "description": "郵便番号から住所を検索するWebアプリケーション",
  "main": "src/main.js",
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src/ tests/ --ext .js",
    "lint:fix": "eslint src/ tests/ --ext .js --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "build": "npm run build:copy && npm run build:minify",
    "build:copy": "mkdir -p dist && cp -r src/ dist/ && cp index.html dist/",
    "build:minify": "npm run minify:css && npm run minify:js",
    "minify:css": "npx clean-css-cli -o dist/src/style.min.css src/style.css",
    "minify:js": "npx terser src/main.js -o dist/src/main.min.js",
    "dev": "vitest --ui",
    "preview": "python3 -m http.server 8000 --directory dist",
    "clean": "rm -rf dist/ coverage/",
    "ci": "npm run lint && npm run test:coverage && npm run build",
    "deploy:xserver": "./scripts/deploy-xserver.sh",
    "deploy:xserver:dry-run": "rsync -avz --dry-run --exclude='.git' --exclude='node_modules' --exclude='tests' --exclude='.github' --exclude='*.md' --exclude='.eslintrc.json' --exclude='.prettierrc' --exclude='vitest.config.js' --exclude='package.json' --exclude='package-lock.json' ./ user@host:/path/to/destination"
  },
  "keywords": ["postcode", "address", "zipcode", "japan"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "jsdom": "^23.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "clean-css-cli": "^5.6.0",
    "terser": "^5.0.0"
  },
  "type": "module"
}
